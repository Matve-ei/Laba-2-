#include <stdio.h>
#include <locale.h>
int main()
{
    setlocale(LC_ALL, "Rus");
    int n, year = 0, e, population; //n=процент прироста 
    printf("Enter n: \n");
    
    do {
        scanf_s("%d", &n);
        
    } while (n <= 0); // пока натуральное число, если 0 то ввод повторится

    printf("Enter population: \n");
    do {
        scanf_s("%d", &population);

    } while (population <= 0);

    e = population * 3;
    for (int i = 0; population <= e; i++) 
    {
        population += (1 * 1.0 / n) * population;
        year = i;
    }
    printf("Население увеличится втрое примерно через %d лет", year); // примерное количество лет(2 года и х месяцев)
    return 0;
}
